// create and display linked list (from Malik chapter 5)
#include <iostream>
using namespace std;

struct nodeType {
    int info;
    nodeType *link;
};

nodeType *buildListForward(); // function prototype

int main() {
    nodeType *current, *head;
    head = buildListForward();
    current = head;
    while (current != NULL) {
        cout << current->info << " ";
        current = current->link;
    }
    cout << endl;
    return 0;
}

nodeType *buildListForward() // function definition
{
    nodeType *first, *newNode, *last;
    int num;
    cout << "Enter a list of integers ending with -999." << endl;
    cin >> num;
    first = NULL;
    last = NULL;
    while (num != -999) {
        newNode = new nodeType;
        newNode->info = num;
        newNode->link = NULL;
        if (first == NULL) {
            first = newNode;
            last = newNode;
        } else {
            last->link = newNode;
            last = newNode;
        }
        cin >> num;
    } // end while
    return first;
} // end buildListForward
